<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patient Form</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f5f5f5;
        }
        .form-container {
            background-color: #fff;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }
        .form-heading {
            text-align: center;
            margin-bottom: 1.5rem;
        }
        .form-section {
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #e0e0e0;
        }
        .form-section:last-child {
            border-bottom: none;
        }
    </style>
</head>
<body>

<div class="container mt-5">
    <div class="form-container">
        <h2 class="form-heading">Patient Information Form</h2>

        <form action="/dashboard" method="POST">
            <!-- Personal Information -->
            <div class="form-section">
                <h4>Personal Information</h4>
                <div class="mb-3">
                    <label for="fullName" class="form-label">Full Name</label>
                    <input type="text" class="form-control" id="fullName" name="personalInfo.fullName" required>
                </div>
                <div class="mb-3">
                    <label for="dob" class="form-label">Date of Birth</label>
                    <input type="date" class="form-control" id="dob" name="personalInfo.dateOfBirth" required>
                </div>
                <div class="mb-3">
                    <label for="gender" class="form-label">Gender</label>
                    <select class="form-select" id="gender" name="personalInfo.gender" required>
                        <option value="">Select Gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="phone" class="form-label">Phone</label>
                    <input type="text" class="form-control" id="phone" name="personalInfo.contactInfo.phone" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="personalInfo.contactInfo.email" required>
                </div>
            </div>

            <!-- Medical History -->
            <div class="form-section">
                <h4>Medical History</h4>
                <div class="mb-3">
                    <label for="pastIllnesses" class="form-label">Past Illnesses</label>
                    <input type="text" class="form-control" id="pastIllnesses" name="medicalHistory.pastIllnesses">
                </div>
                <div class="mb-3">
                    <label for="surgeries" class="form-label">Surgeries</label>
                    <input type="text" class="form-control" id="surgeries" name="medicalHistory.surgeries[0].procedure" placeholder="Procedure">
                    <input type="date" class="form-control mt-2" name="medicalHistory.surgeries[0].date" placeholder="Date">
                    <input type="text" class="form-control mt-2" name="medicalHistory.surgeries[0].hospital" placeholder="Hospital">
                </div>
                <div class="mb-3">
                    <label for="chronicConditions" class="form-label">Chronic Conditions</label>
                    <input type="text" class="form-control" id="chronicConditions" name="medicalHistory.chronicConditions">
                </div>
            </div>

            <!-- Medications -->
            <div class="form-section">
                <h4>Medications</h4>
                <div class="mb-3">
                    <label for="currentMedications" class="form-label">Current Medications</label>
                    <input type="text" class="form-control" id="currentMedications" name="medications.current[0].name" placeholder="Medication Name">
                    <input type="text" class="form-control mt-2" name="medications.current[0].dosage" placeholder="Dosage">
                    <input type="text" class="form-control mt-2" name="medications.current[0].frequency" placeholder="Frequency">
                </div>
            </div>

            <!-- Lifestyle -->
            <div class="form-section">
                <h4>Lifestyle</h4>
                <div class="mb-3">
                    <label for="smoking" class="form-label">Smoking</label>
                    <select class="form-select" id="smoking" name="lifestyle.smoking">
                        <option value="false">No</option>
                        <option value="true">Yes</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="alcohol" class="form-label">Alcohol Consumption</label>
                    <select class="form-select" id="alcohol" name="lifestyle.alcoholConsumption">
                        <option value="None">None</option>
                        <option value="Occasional">Occasional</option>
                        <option value="Regular">Regular</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="physicalActivity" class="form-label">Physical Activity</label>
                    <input type="text" class="form-control" id="physicalActivity" name="lifestyle.physicalActivity">
                </div>
            </div>

            <!-- Medical Reports -->
            <div class="form-section">
                <h4>Medical Reports</h4>
                <div class="mb-3">
                    <label for="labResults" class="form-label">Lab Results</label>
                    <input type="text" class="form-control" id="labResults" name="medicalReports.labResults[0].testName" placeholder="Test Name">
                    <input type="text" class="form-control mt-2" name="medicalReports.labResults[0].result" placeholder="Result">
                    <input type="date" class="form-control mt-2" name="medicalReports.labResults[0].date">
                </div>
            </div>

            <!-- Vitals -->
            <div class="form-section">
                <h4>Vitals</h4>
                <div class="mb-3">
                    <label for="bloodPressure" class="form-label">Blood Pressure</label>
                    <input type="number" class="form-control" id="systolic" name="vitals.bloodPressure.systolic" placeholder="Systolic">
                    <input type="number" class="form-control mt-2" id="diastolic" name="vitals.bloodPressure.diastolic" placeholder="Diastolic">
                </div>
            </div>

            <!-- Symptoms -->
            <div class="form-section">
                <h4>Symptoms</h4>
                <div class="mb-3">
                    <label for="symptoms" class="form-label">Symptom</label>
                    <input type="text" class="form-control" id="symptom" name="symptoms[0].symptom" placeholder="Symptom">
                    <input type="text" class="form-control mt-2" name="symptoms[0].location" placeholder="Location">
                    <input type="number" class="form-control mt-2" name="symptoms[0].severity" placeholder="Severity (1-10)">
                    <input type="text" class="form-control mt-2" name="symptoms[0].duration" placeholder="Duration">
                </div>
            </div>

            <!-- Submit Button -->
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script>
        const form = document.querySelector("form");

        // Prevent form submission on button click
        document
            .getElementById("submit-btn")
            .addEventListener("click", function (event) {
                event.preventDefault();
            });
    </script>
</body>
</html>
